<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamemodes.equationpuzzle.EquationPuzzle"
    android:background="@color/standard_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="20">
            <include layout="@layout/top_bar_for_game_modes"/>
            <TableLayout
                android:id="@+id/table_layout_equation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="12"
                android:stretchColumns="*"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">
                <include layout="@layout/number_buttons" />
            </RelativeLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>