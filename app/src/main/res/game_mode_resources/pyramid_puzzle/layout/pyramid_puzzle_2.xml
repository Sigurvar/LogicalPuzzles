<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_8"
        app:layout_constraintBottom_toTopOf="@id/guideline_9"
        android:onClick="backgroundClick"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pyramid"
            app:layout_constraintBottom_toBottomOf="@id/guideline_1" />

        <TextView
            android:id="@+id/tv1"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_1"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_6" />

        <TextView
            android:id="@+id/tv2"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_1"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintRight_toLeftOf="@+id/tv3" />

        <TextView
            android:id="@+id/tv3"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_1"
            app:layout_constraintLeft_toRightOf="@+id/tv2"
            app:layout_constraintRight_toLeftOf="@+id/tv4" />

        <TextView
            android:id="@+id/tv4"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_1"
            app:layout_constraintRight_toLeftOf="@+id/guideline_7" />

        <TextView

            android:id="@+id/tv5"
            style="@style/pyramid_4_box"

            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_2"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_6"
            app:layout_constraintRight_toLeftOf="@+id/tv6" />

        <TextView

            android:id="@+id/tv6"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toTopOf="@+id/guideline_2"
            app:layout_constraintLeft_toRightOf="@+id/tv5"
            app:layout_constraintRight_toLeftOf="@+id/tv7" />
        <TextView

            android:id="@+id/tv7"
            style="@style/pyramid_4_box"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_2"
            app:layout_constraintRight_toRightOf="@+id/guideline_7"
            app:layout_constraintLeft_toRightOf="@+id/tv6"/>

        <TextView

            android:id="@+id/tv8"
            style="@style/pyramid_4_box"

            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_3"
            app:layout_constraintRight_toRightOf="@+id/guideline_5" />
        <TextView

            android:id="@+id/tv9"
            style="@style/pyramid_4_box"

            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_3"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_5" />
        <TextView

            android:id="@+id/tv10"
            style="@style/pyramid_4_box"
            app:layout_constraintBottom_toTopOf="@+id/guideline_4"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_6"
            app:layout_constraintRight_toRightOf="@+id/guideline_7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.57" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.13" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.87" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>