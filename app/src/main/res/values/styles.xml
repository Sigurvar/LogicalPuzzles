<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/standard_background</item>
    </style>
    <!-- Standard for pyramid puzzles-->
    <style name="pyramid_standard">
        <item name="android:onClick">input</item>
        <item name="android:background">@drawable/pyramid_box</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintHeight_default">percent</item>
    </style>
    <!-- Box for pyramid_puzzle_1-->
    <style name="pyramid_3_box"
        parent="@style/pyramid_standard">
        <item name="layout_constraintWidth_percent">0.2</item>
        <item name="layout_constraintHeight_percent">0.18</item>
    </style>
    <!-- Box for pyramid_puzzle_2-->
    <style name="pyramid_4_box"
        parent="@style/pyramid_standard">
        <item name="layout_constraintWidth_percent">0.16</item>
        <item name="layout_constraintHeight_percent">0.14</item>
    </style>
    <!-- Box for pyramid_puzzle_3-->
    <style name="pyramid_5_box"
        parent="@style/pyramid_standard">
        <item name="layout_constraintWidth_percent">0.14</item>
        <item name="layout_constraintHeight_percent">0.12</item>
    </style>

    <style name="number_button"
        parent="standard_button">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">number_click</item>
    </style>
    <!-- Buttons for the home screen-->
    <style name="home_buttons"
        parent="standard_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">17dp</item>
    </style>
    <style name="popup_button"
        parent="standard_button">
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- Standard style for buttons, used in levelSelector-->
    <style name="standard_button">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">playLevel</item>
    </style>
    <!-- Locked gamemode, subGamemode or level-->
    <style name="locked">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:src">@drawable/ic_lock</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:onClick">displayBlockedErrorMessage</item>
    </style>
    <!-- Make them green puzzle ImageView circle -->
    <style name="make_them_green_image_view_circle">
        <item name="android:src">@drawable/make_them_green_circle</item>
        <item name="android:onClick">mapClick</item>
    </style>
    <style name="sudoku_number_field">
        <item name="android:background">#00000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sudoku_number_box">
        <item name="android:background">@drawable/sudoku_field_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">fieldClick</item>
    </style>
    <style name="sudoku_small_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/input_text_color</item>
    </style>
    <style name="sudoku_number_table">
        <item name="android:background">@drawable/sudoku_table_thick_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- Pattern puzzle text view-->
    <style name="pattern_puzzle_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- Pattern puzzle include figure-->
    <style name="pattern_puzzle_include_figure">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHeight_default">percent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <!-- Order Puzzle TextView-->
    <style name="order_puzzle_text_view">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/box_with_bottom_border</item>
    </style>
    <!-- Order Puzzle Column-->
    <style name="order_puzzle_column">
        <item name="android:background">@drawable/box_with_large_border</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
